<div class='background-1'></div>
<div id='home_title'>
	<h1 id='title_h1'>WELCOME TO TECHCOMPARE.COM!!!</h1>
</div>
<div class='background0'></div>
<div id='home_compare_div'>
	<h2 id='compare_title'>Try it now compare two monitors</h2>
	 <%= form_tag(search_path, method: "get",id: 'home_form') do %>
  		<%= text_field_tag(:search,nil,:placeholder => 'Compare Product',:class=>'auto_home',id: 'home_compare1',data:{autocomplete_source: Display.order(:name).map(&:name)}) %>
  		<%=image_tag ('compare_arrows.png')%>
  		<%= text_field_tag(:search2,nil,:placeholder => 'Compare Product',:class=>'auto_home', id: 'home_compare2',data:{autocomplete_source: Display.order(:name).map(&:name)}) %><br>
  		<%= button_tag(type: 'submit', class: "button") do %>
		 	<span>Compare </span> 
		<% end %>
 	<% end %>
 	<h2>Currently only have 21:9 monitors listed</h2>
</div>

<div class='background1'></div>
<div id='home_sort_div'>
	<h2 id='home_sort_title'>View all currently listed monitors sorted by:</h2> 
	<table>
		<tr>
			<th><%= link_to 'Name', displays_path(sort:'name',direction: 'asc') %></th>
			<th><%= link_to 'Price', displays_path(sort:'Price',direction: 'asc') %></th>
		</tr>
		<tr>
			<th><%= link_to 'Resolution', displays_path(sort:'resolution',direction: 'asc') %></th>
			<th><%= link_to 'Brand', displays_path(sort:'brand',direction: 'asc') %></th>
		</tr>
		<tr>
			<th><%= link_to 'Aspect Ratio', displays_path(sort:'aspect_ratio',direction: 'asc') %></th>
			<th><%= link_to 'Size', displays_path(sort:'size',direction: 'asc') %></th>
		</tr>
		<tr>
			<th><%= link_to 'Response time', displays_path(sort:'response_time',direction: 'asc') %></th>
			<th><%= link_to 'Refresh Rate', displays_path(sort:'refresh_rate',direction: 'desc') %></th>
		</tr>
		<tr>
			<th><%= link_to 'Speakers', displays_path(sort:'speakers',direction: 'asc') %></th>
			<th><%= link_to 'Panel', displays_path(sort:'panel',direction: 'asc') %></th>
		</tr>
		<tr>
			<th><%= link_to 'G/Free Sync', displays_path(sort:'gpu_sync',direction: 'desc') %></th>
		</tr>	
	</table>
</div>

