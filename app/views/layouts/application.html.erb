<!DOCTYPE html>
<html>
<head>
  <title>TechCompare</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

  <%= csrf_meta_tags %>
</head>
<body>

<ul class="topnav" id="myTopnav">
  <li><%= link_to 'Home', '#' %></li>
  <li><%= link_to 'Monitors', displays_path %></li>
  <li><%= link_to 'Compare', '#' %></li>
  <li><a href="#about">About</a></li>
  <li class="icon">
    <a href="javascript:void(0);" onclick="myFunction()">&#9776;</a>
  </li>
</ul>
<%= form_tag(search_path, method: "get") do %>
  <%= text_field_tag(:search,nil,:placeholder => 'Compare Product',:class=>'auto',data:{autocomplete_source: Display.order(:name).map(&:name)}) %>

  <%= text_field_tag(:search2,nil,:placeholder => 'Compare Product',:class=>'auto',data:{autocomplete_source: Display.order(:name).map(&:name)}) %>
   <%= submit_tag("Compare") %>
<% end %>

<%= yield %>

</body>
</html>
