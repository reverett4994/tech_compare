<!DOCTYPE html>
<html>
<head>
  <title>TechCompare</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

  <%= csrf_meta_tags %>
</head>
<body>
<%= form_tag(search_path, method: "get") do %>
  <%= text_field_tag(:search,nil,:placeholder => 'Search for Product',:class=>'auto',data:{autocomplete_source: Display.order(:name).map(&:name)}) %>

  <%= text_field_tag(:search2,nil,:placeholder => 'Search for Product',:class=>'auto',data:{autocomplete_source: Display.order(:name).map(&:name)}) %>
   <%= submit_tag("Search") %>
<% end %>

<%= yield %>

</body>
</html>
